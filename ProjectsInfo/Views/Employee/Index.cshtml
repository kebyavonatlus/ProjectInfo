@model IEnumerable<ProjectsInfo.Models.Employee.EmployeeViewModel>
@{
    ViewBag.Title = "Список сотрудников";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Создать нового сотрудника", "CreateEmployee")
</p>
<table class="table table-striped table-bordered" id="employeeTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeSureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeePatronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeStatus)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeSureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePatronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeStatus)
            </td>
            <td>
                <a href="@Url.Action("EditEmployee","Employee", new {employeeId = item.EmployeeId})" class="btn btn-info">Изменить</a>
            </td>
        </tr>
    }

</table>
@section scripts {
    <script>
        $(document).ready(function() {
            $('#employeeTable').DataTable({
                "language": {
                    "lengthMenu": "Показать _MENU_ записей на страницу",
                    "zeroRecords": "Не загруженных записей",
                    "info": "Показ страницы _PAGE_ из _PAGES_",
                    "infoEmpty": "Не загруженных записей",
                    "infoFiltered": "(filtered from _MAX_ total records)",
                    "paginate": {
                        "next": "Следующая",
                        "previous": "Предыдущая"
                    },
                    "search": "Поиск:"
                },
                'columnDefs': [
                    {
                        'targets': [5],
                        'orderable': false
                    }
                ]
            });
        });
    </script>
}