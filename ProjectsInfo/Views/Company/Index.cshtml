@model IEnumerable<ProjectsInfo.Models.Company.CompanyViewModel>

@{
    ViewBag.Title = "Список компаний";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Создать компанию", "CreateCompany")
</p>
<table class="table table-striped table-bordered" id="companyTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyStatus)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyStatus)
            </td>
            <td>
                <a href="@Url.Action("EditCompany","Company", new {companyID = item.CompanyId})" class="btn btn-info">Изменить</a>
            </td>
        </tr>
    }

</table>


@section scripts {
    <script>
        $(document).ready(function () {
            $('#companyTable').DataTable({
                "language": {
                    "lengthMenu": "Показать _MENU_ записей на страницу",
                    "zeroRecords": "Не загруженных записей",
                    "info": "Показ страницы _PAGE_ из _PAGES_",
                    "infoEmpty": "Не загруженных записей",
                    "infoFiltered": "(filtered from _MAX_ total records)",
                    "paginate": {
                        "next": "Следующая",
                        "previous": "Предыдущая"
                    },
                    "search": "Поиск:"
                },
                'columnDefs': [
                    {
                        'targets': [3],
                        'orderable': false
                    }
                ]
            });
        });
    </script>
}