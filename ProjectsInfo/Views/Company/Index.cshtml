@model IEnumerable<ProjectsInfo.Models.Company.CompanyViewModel>

@{
    ViewBag.Title = "Список компаний";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Создать компанию", "CreateCompany")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyStatus)
        </td>
        <td>
            @Html.ActionLink("Изменить", "EditCompany", new {  companyId = item.CompanyId })
        </td>
    </tr>
}

</table>
