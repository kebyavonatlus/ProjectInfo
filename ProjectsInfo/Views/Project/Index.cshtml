@model IEnumerable<ProjectsInfo.Models.Project.ProjectViewModel>

@{
    ViewBag.Title = "Список проектов";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Создать новый проект", "CreateProject")
</p>
<table class="table table-striped table-bordered" id="projectTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExecutorCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectSupervisor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectStatus)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExecutorCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectSupervisor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectStatus)
            </td>
            <td>
                @Html.ActionLink("Изменить проект", "EditProject", new { projectId = item.ProjectId }) |
                @Html.ActionLink("Удалить исполнителя", "ShowEmployeesInProject", new { projectId = item.ProjectId }) |
                @Html.ActionLink("Добавить исполнителя", "AddEmployeeToProject", new { projectId = item.ProjectId })
            </td>
        </tr>
    }

</table>

@section scripts {
    <script>
        $(document).ready(function() {
            $('#projectTable').DataTable({
                "language": {
                    "lengthMenu": "Показать _MENU_ записей на страницу",
                    "zeroRecords": "Не загруженных записей",
                    "info": "Показ страницы _PAGE_ из _PAGES_",
                    "infoEmpty": "Не загруженных записей",
                    "infoFiltered": "(filtered from _MAX_ total records)",
                    "paginate": {
                        "next": "Следующая",
                        "previous" : "Предыдущая"
                    },
                    "search": "Поиск:"
                },
                'columnDefs': [
                    {
                        'targets': [7],
                        'orderable': false
                    }
                ]
            });
        } );
    </script>
}